{
  "root": true,
  "env": {
    "es2020": true,
    "browser": true,
    "webextensions": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@babel/eslint-parser",
  "ignorePatterns": ["build.js","watch.js"],
  "rules": {
    "semi": "error",
    "no-unused-vars": ["error", {"argsIgnorePattern": "^[_e]$"}],
    "no-trailing-spaces": "error",
    "quotes": ["error", "single", {"allowTemplateLiterals": true}],
    "no-extra-semi": "error",
    "no-cond-assign": "warn"
  }
}